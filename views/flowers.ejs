<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Flowers</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

	<div class="container">
		<% flowers.forEach(flower=> { %>
			<div class="row">
				<div class="col">
					<%= flower.name %>
				</div>
				<div class="col">
					<%= flower.color %>
				</div>
				<div class="col">
					<%= flower.petalsNumber %>
				</div>
			</div>
			<% }) %>
	</div>


</body>

</html>